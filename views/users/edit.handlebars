<form class="signup" action="/users?_method=put" method="post">
  <table class="center-container">
    <tr>
      <td>AvatarUrl:</td>
      <td> <input type="text" name="user[avatar]" value="{{user.avatar}}"></td>
    </tr>
    <tr>
      <td>Phone Number:</td>
      <td> <input type="text" name="user[phoneNumber]" value="{{user.phoneNumber}}"></td>
    </tr>
    <tr>
      <td>Latitude:</td>
      <td> <input class="locationLat" type="text" name="user[locationLat]" value="{{user.locationLat}}"></td>
    </tr>
    <tr>
      <td>Longitude:</td>
      <td> <input class="locationLong" type="text" name="user[locationLong]" value="{{user.locationLong}}"></td>
    </tr>
    <tr class="right-container">
      <td><button id="location" class="btn btn-default">Get Location</button></td>
      <td><button id="submit" class="btn btn-default">Submit</button></td>
    </tr>
  </table>
</form>
